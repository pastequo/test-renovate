{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",

    "enabledManagers": [
        "regex"
    ],

    "groupName": "Konflux build pipeline",
    "commitMessagePrefix": "NO-ISSUE: ",
    "labels": ["lgtm", "approved", "konflux"],

    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": ["^Dockerfile.lint$"],
            "matchStrings": [
                "RUN curl .*https://raw.githubusercontent.com/golangci/golangci-lint/master/install.sh | sh -s -- .* (?<currentValue>.*?)\\n"
            ],
            "depNameTemplate": "github.com/golangci/golangci-lint",
            "datasourceTemplate": "go"
        },
        {
            "customType": "regex",
            "fileMatch": ["^Dockerfile$"],
            "matchStrings": [
                "FROM (?<depName>.*?):rhel_\\${RHEL_VERSION}_golang_(?<currentValue>.*?) AS golang\\n"
            ],
            "datasourceTemplate": "docker"
        }
    ],

    "packageRules": [
        {
            "matchDatasources": ["docker"],
            "matchPackageNames": ["brew.registry.redhat.io/rh-osbs/openshift-golang-builder"],
            "versioning": "regex:^rhel_9_golang_(?<major>\\d+)\\.(?<minor>\\d+)$"
        }
    ]
}
